<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
	<hibernate-mapping>
		<class name="com.wgl.bean.Banner" table="banner">
			<id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
			
			<property name="title" column="title" type="java.lang.String" length="50"></property>
			<property name="images" column="images" type="java.lang.String" length="100"></property>
			<property name="link" column="link" type="java.lang.String" length="200"></property>
	
			
		</class>
	</hibernate-mapping>