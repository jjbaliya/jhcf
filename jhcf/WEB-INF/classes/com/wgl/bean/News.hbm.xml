<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
	<hibernate-mapping>
		<class name="com.wgl.bean.News" table="t_News">
			<id name="id" column="id">
				<generator class="native"></generator>
			</id>
			
			<property name="title" column="title" type="java.lang.String" length="40"></property>
			<property name="source" column="source" type="java.lang.String" length="15"></property>
			<property name="cont" column="cont" type="java.lang.String" length="1000"></property>
			<property name="images" column="images" type="java.lang.String" length="100"></property>
			<property name="date" column="date" type="java.lang.String" length="25"></property>
			<property name="groupname" column="groupname" type="int"></property>
		</class>
	</hibernate-mapping>